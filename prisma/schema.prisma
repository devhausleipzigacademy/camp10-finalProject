model Tag {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  userId         String
  // boardId        String
  // board          Board            @relation(fields: [boardId], references: [id])
  // JobTaggedbyTag JobTaggedbyTag[]
  job Job[]
}

model Column {
  id              String @id @default(uuid())
  userId          String
  positionInBoard Int
  color           String
  title           String
  // board           Board  @relation(fields: [boardId], references: [id])
  jobs            Job[]
}

model Job {
  id               String           @id @default(uuid())
  userId           String
  columnId         String
  // board            Board            @relation(fields: [boardId], references: [id])
  column           Column           @relation(fields: [columnId], references: [id])
  title            String
  url              String
  companyName      String
  companyWebsite   String?
  location         String?
  description      String?
  deadline         DateTime?
  positionInColumn Int
  remoteType       remoteType?
  priority         priority?
  // JobTaggedbyTag   JobTaggedbyTag[]
  tag Tag[]
}

