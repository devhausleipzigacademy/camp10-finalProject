generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tag {
  id        String   @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  job       Job[]    @relation("JobToTag")

  @@unique([name, userId])
}

model Column {
  id              String   @id @default(uuid())
  userId          String
  positionInBoard Int
  color           String
  title           String
  createdAt       DateTime @default(now())
  jobs            Job[]
}

model Job {
  id               String      @id @default(uuid())
  userId           String
  columnId         String
  title            String
  url              String
  companyName      String
  companyWebsite   String?
  location         String?
  description      String?
  deadline         DateTime?
  positionInColumn Int
  remoteType       remoteType?
  priority         priority?
  createdAt        DateTime    @default(now())
  isArchived       Boolean     @default(false)
  column           Column      @relation(fields: [columnId], references: [id])
  tag              Tag[]       @relation("JobToTag")
}

enum remoteType {
  Remote
  Hybrid
  Onsite
}

enum priority {
  Low
  Medium
  High
}
