generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum remoteType {
  Remote
  Hybrid
  Onsite
}

enum priority {
  Low
  Medium
  High
}

