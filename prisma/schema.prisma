generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tag {
  id        String     @id
  name      String
  userId    String
  createdAt DateTime   @default(now())
  JobToTag  JobToTag[]

  @@unique([name, userId])
}

model Column {
  id              String   @id @default(uuid())
  userId          String
  positionInBoard Int
  color           String
  title           String
  createdAt       DateTime @default(now())
  jobs            Job[]
}

model Job {
  id               String      @id @default(uuid())
  userId           String
  columnId         String
  title            String
  url              String
  companyName      String
  companyWebsite   String?
  location         String?
  description      String?
  deadline         DateTime?
  positionInColumn Int
  remoteType       remoteType?
  priority         priority?
  createdAt        DateTime    @default(now())
  isArchived       Boolean     @default(false)
  column           Column      @relation(fields: [columnId], references: [id])
  JobToTag         JobToTag[]
}

model JobToTag {
  jobId String
  tagId String
  Job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  Tag   Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([jobId, tagId])
}

enum remoteType {
  Remote
  Hybrid
  Onsite
}

enum priority {
  Low
  Medium
  High
}
