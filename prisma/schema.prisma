// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum remoteType {
  Remote
  Hybrid
  Onsite
}

enum priority {
  Low
  Medium
  High
}

model Tag {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  userId         String
  job Job[]
}

model Column {
  id              String @id @default(uuid())
  userId          String
  positionInBoard Int
  color           String
  title           String
  jobs            Job[]
}

model Job {
  id               String           @id @default(uuid())
  userId           String
  columnId         String
  column           Column           @relation(fields: [columnId], references: [id])
  title            String
  url              String
  companyName      String
  companyWebsite   String?
  location         String?
  description      String?
  deadline         DateTime?
  positionInColumn Int
  remoteType       remoteType?
  priority         priority?
  tag Tag[]
}